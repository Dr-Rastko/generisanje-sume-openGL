struct Matrix4 {
    float m[16];
    Matrix4() {
        for(int i = 0; i < 16; i++) m[i] = 0;
        m[0] = m[5] = m[10] = m[15] = 1; // Identity
    }

    Matrix4(const Matrix4& other) {
        for(int i = 0; i < 16; i++) m[i] = other.m[i];
    }

    Matrix4& operator=(const Matrix4& other) {
        for(int i = 0; i < 16; i++) m[i] = other.m[i];
        return *this;
    }
};

