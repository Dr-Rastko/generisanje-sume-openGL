void mouseWheel(int button, int dir, int x, int y) {
    if (dir > 0)
        cameraDistance -= 1.0f;
    else
        cameraDistance += 1.0f;

    if (cameraDistance < 2.0f) cameraDistance = 2.0f;
    if (cameraDistance > 100.0f) cameraDistance = 100.0f;

    glutPostRedisplay();
}

